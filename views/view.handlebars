<div class="container">
    <div class="row">
        <!--  This first row just contains event title-->
        <div class="col-12">
        <div class="text-center top-header">
            <h3 id="eventName">Wedding Celebration</h3>
        </div>
        </div>
    </div>
    <!-- Event Info will be loaded here-->
    <div class="row">
        <div class="col-6">
            <p>Description:</p>
            <br>
            <p id="eventDescription"></p>

        </div>
        <div class="col-6">
            <p>Time and Place:</p>
            <p id="eventDate">9/18/2018</p>
            <p id="eventTime">6:30 PM</p>
            <p id="eventLocation">Main Dining Room</p>
        </div>
    </div>

    <!-- Table with each item/amount and cost will be generated here-->
    <div class="container" style="margin-top:2%">
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Food Item</th>
                <th scope="col">Servings Requested</th>
                <th scope="col">Total Price</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th id="foodItem" scope="row">Chicken Picatta</th>
                <td id="foodAmount">15</td>
                <td id="foodPrice">$100.00</td>
            </tr>
            <tr>
                <th id="foodItem" scope="row">Rice Pilaf</th>
                <td id="foodAmount">15</td>
                <td id="foodPrice">$30.00</td>
            </tr>
            <tr>
                <th id="foodItem" scope="row">Grilled Vegetables</th>
                <td id="foodAmount">15</td>
                <td id="foodPrice">$35.00</td>
            </tr>
            </tbody>
        </table>
    <hr>

    <!-- Going to add another text input here for additional info-->
    <!-- Also going to calculate and display total price of items here-->
    <div class="container">
    <div class="row">
        <div class="col-6">
            <p>Additional Info:</p>
            <p id ="eventAdditionalInfo">Three of the entrees must be prepared vegan and gluten free. Substitute tofu for chicken.</p>
        </div>
        <div class="col-6">
            <p>Total Price for Event:</p>
            <p id ="eventTotalCost">$1,650</p>
        </div>
    </div>
    <button class="btn btn-secondary approve" type="submit">Approve</button>
    <button class="btn btn-secondary cancel" type="submit">Cancel</button>
</div>

